<UserControl x:Class="Dianzhu.CSClient.ViewWPF.UC_Search"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dianzhu.CSClient.ViewWPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <WrapPanel>
                <Label Content="时间"></Label>
                <TextBox x:Name="tbxKeyword" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" Width="200"/>
            </WrapPanel>

            <WrapPanel>
                <Label Content="价格"></Label>
                <TextBox x:Name="tbxKeywordPrice" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" Width="200"/>
            </WrapPanel>

            <WrapPanel>
                <Label Content="类型"></Label>
                <ComboBox x:Name="cbxSearchTypeF" Width="80"/>
                <ComboBox x:Name="cbxSearchTypeS" Width="80"/>
                <ComboBox x:Name="cbxSearchTypeT" Width="80"/>
            </WrapPanel>

            <DockPanel>
                <Button x:Name="btnSearch" Content="搜索服务" HorizontalAlignment="Right" Width="75" Click="btnSearch_Click"/>
            </DockPanel>
        </StackPanel>        
    </Grid>
</UserControl>
