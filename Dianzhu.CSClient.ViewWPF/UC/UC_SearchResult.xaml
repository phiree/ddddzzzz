<UserControl x:Class="Dianzhu.CSClient.ViewWPF.UC_SearchResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dianzhu.CSClient.ViewWPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto" >
            <StackPanel  x:Name="pnlSearchResult" VerticalAlignment="Bottom" />
        </ScrollViewer>
        <WrapPanel>
                <Label>目标地址:</Label> <TextBox x:Name="tbxTargetAddress" Width="225"></TextBox>
                <Label>预约时间</Label><TextBox x:Name="tbxTargetTime" Width="230">2016-1-1</TextBox>
                <Button x:Name="btnPush" Click="btnPush_Click">推送</Button>
        </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
