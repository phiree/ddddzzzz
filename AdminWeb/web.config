  http://go.microsoft.com/fwlink/?LinkId=169433
  -->

<configuration>
  <connectionStrings>
    <add name="DianzhuConnectionString"
         connectionString="data source=localhost;uid=root;pwd=root;database=dianzhu_dev"
         providerName="MySql.Data.MySqlClient" />
  </connectionStrings>
  <system.web>
    <compilation debug="true" targetFramework="4.0" />
    <authentication mode="Forms" >
      <forms loginUrl="login.aspx"
        name=".ASPXFORMSAUTH" />
    </authentication>
    <membership defaultProvider="DZMembershipProvider" >
      <providers>
        <clear/>
        <add name="DZMembershipProvider" type="Dianzhu.BLL.DZMembershipProvider" connectionStringName="DianzhuConnectionString"
             maxInvalidPasswordAttempts="5" minRequiredPasswordLength="6"
              minRequiredNonalphanumericCharacters="0"
             passwordAttemptWindow="10" applicationName="/"/>
      </providers>
    </membership>
  </system.web>
  <appSettings>
    <!--cdn 网址，不末尾不要加斜杠（/）-->
    <add key="cdnroot" value="http://localhost:8464/cdn"/>
  </appSettings>

</configuration>
