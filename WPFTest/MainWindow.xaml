<Window x:Class="WPFTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="0,127,0,0" x:Name="gdMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <WrapPanel Height="105" VerticalAlignment="Bottom" Margin="-2,-120,2,208" Grid.ColumnSpan="3"/>
        <WrapPanel Margin="10,0,0,0">
            <Button x:Name="button" Content="Button" Width="75"/>
        </WrapPanel>
        <WrapPanel  Grid.Column="1">
            <Button x:Name="button1" Content="Button" Width="75"/>
        </WrapPanel>
        <WrapPanel Grid.Column="2">
            <Button x:Name="button2" Content="Button" Width="75"/>
        </WrapPanel>

    </Grid>
</Window>
