<UserControl x:Class="Dianzhu.CSClient.ViewWPF.UC_Order"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dianzhu.CSClient.ViewWPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel x:Name="pnlOrder">
            <WrapPanel>
                <Label  Content="订单状态"/>
                <Label x:Name="lblOrderStatus" />
            </WrapPanel>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel  x:Name="pnlOrderDetails"/>
            </ScrollViewer>
            <WrapPanel x:Name="pnlOrderOperation">
                <Button x:Name="btnPush">推送</Button>
            </WrapPanel>
        </StackPanel>

    </Grid>
</UserControl>
